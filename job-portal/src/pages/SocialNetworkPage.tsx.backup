        const filtered = prev.filter(story => story._id !== newStory._id);
        return [newStory, ...filtered];
      });
      
      setAllStories(prev => {
        const filtered = prev.filter(story => story._id !== newStory._id);
        return [newStory, ...filtered];
      });
